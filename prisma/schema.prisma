generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  role      String   @default("POS_OFFICER")
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id            String      @id @default(cuid())
  name          String
  price         Float
  description   String?
  stockQuantity Int
  category      String?
  imageUrl      String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]

  @@index([name])
}

model Order {
  id          String      @id @default(cuid())
  orderNumber String      @unique
  date        DateTime    @default(now())
  totalAmount Float
  discount      Float       @default(0)
  paymentMethod String      @default("CASH") // CASH, CARD, QR
  amountPaid    Float       @default(0)
  change        Float       @default(0)
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]

  @@index([date])
  @@index([userId])
}

model OrderItem {
  id        String  @id @default(cuid())
  quantity  Int
  price     Float
  orderId   String
  productId String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model StoreSettings {
  id        Int      @id @default(1)
  storeName String   @default("Smart POS")
  address   String   @default("123 Store St, City, Country")
  phone     String?
  taxRate   Float    @default(0)
  currency  String   @default("$")
  updatedAt DateTime @updatedAt
}
